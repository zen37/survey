@page "/matches"

@if (saved)
{
    <div class="alert alert-success" role="alert">
        Your choices have been submitted!
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Score</th>
            <th>LinkedIn</th>
            <th>Facebook</th>
            <th>Instagram</th>
            <th>Other</th>
            <th>Date Request Accepted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Users.OrderByDescending(u => u.RequestAccept))
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.LinkedIn</td>
                <td>@user.LinkedIn</td>
                <td>@user.LinkedIn</td>
                <td>@user.LinkedIn</td>
                <td>@user.LinkedIn</td>
                    <td></td>
            </tr>
        }
    </tbody>
</table>


@code {
    private bool saved;
    public List<User> Users { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Users = new List<User>();
        for (int i = 0; i < 10; i++)
        {
            Users.Add(new User());
        }
    }


    private void Submit()
    {
        // Save the answers
        saved = true;
    }

    public class User
    {
        public string Username { get; set; }
        public string LinkedIn { get; set; }
        public DateOnly RequestAccept { get; set; }



        public User()
        {
            Username = GenerateRandomUsername();
        }

        private string GenerateRandomUsername()
        {
            const string chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
            var random = new Random();
            return new string(Enumerable.Repeat(chars, 6)
              .Select(s => s[random.Next(s.Length)]).ToArray());
        }

        private int GenerateRandomMatchPercentage()
        {
            var random = new Random();
            return random.Next(70, 101);
        }
    }
}

